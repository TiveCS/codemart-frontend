---
import Button from "../components/Button.astro";
import Layout from "../layouts/Layout.astro";

export interface Props {
  title?: string;
  author?: string;
  contents?: string[];
  description?: string;
  price?: number;
}

const {
  title = "Portofolio Website Template",
  author = "John Doe",
  contents = [
    "/codemart-frontend/assets/img/Product_Portofolio_Web.jpg",
    "/codemart-frontend/assets/img/Product_Portofolio_2_Web.jpg",
    "/codemart-frontend/assets/img/Product_Portofolio_3_Web.jpg",
  ],
  description = "Lorem ipsum dolor sit amet consectetur adipisicing elit. Quis deserunt aspernatur sint corrupti qui ad saepe ipsa mollitia commodi autem sapiente magnam maiores labore obcaecati aut velit beatae doloremque numquam, harum placeat dolor recusandae. Architecto iste optio, neque earum debitis aliquam. Sequi ut beatae asperiores dolor. Ullam alias illo aut, delectus expedita, hic nesciunt placeat est consequuntur a fugit maxime.",
  price = 2000,
} = Astro.props as Props;

const priceDisplay = price === 0 ? "Free" : `$${price}`;
---

<Layout title="CodeMart | Product Details">
  <main class="mx-32 my-16 bg-recandy-white-100 shadow-md">
    <header class="px-8 py-8 mb-4">
      <h2 class="text-3xl font-medium">{title}</h2>

      <h4 class="text-md text-recandy-blue-700 font-medium">{author}</h4>

      <br />
      <Button>Buy for {priceDisplay}</Button>
    </header>

    <section
      class="px-8 py-8 bg-recandy-white-0 flex flex-col items-center space-y-8"
    >
      <section id="slideshow-container" class="w-3/4 bg-slate-600 relative">
        <div id="contents">
          <div id="content-1" class="w-full">
            <img
              src="/codemart-frontend/assets/img/Product_Portofolio_Web.jpg"
              alt="1"
            />
          </div>
          <div id="content-2" class="w-full hidden">
            <img
              src="/codemart-frontend/assets/img/Product_Portofolio_2_Web.jpg"
              alt="2"
            />
          </div>
          <div id="content-3" class="w-full hidden">
            <img
              src="/codemart-frontend/assets/img/Product_Portofolio_3_Web.jpg"
              alt="3"
            />
          </div>
        </div>

        <div id="controls" class="flex inset-0 absolute">
          <div class="flex items-center justify-start w-1/2">
            <button
              class="carousel-control-btn -ml-6"
              onclick="changeSlide(false)"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M19.5 12h-15m0 0l6.75 6.75M4.5 12l6.75-6.75"></path>
              </svg>
            </button>
          </div>
          <div class="flex items-center justify-end w-1/2">
            <button
              class="carousel-control-btn -mr-6"
              onclick="changeSlide(true)"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"></path>
              </svg>
            </button>
          </div>
        </div>
      </section>

      <section class="space-y-2 w-full">
        <h5 class="text-xl font-semibold">Description</h5>

        <p>
          {description}
        </p>
      </section>
    </section>
  </main>
</Layout>

<script is:inline>
  const maxSlide = 3;
  let currentSlide = 1;

  const getCurrentSlide = () => currentSlide;

  const getNextSlide = () => {
    if (currentSlide === maxSlide) {
      return 1;
    } else {
      return currentSlide + 1;
    }
  };

  const getPreviousSlide = () => {
    if (currentSlide === 1) {
      return 3;
    } else {
      return currentSlide - 1;
    }
  };

  const changeSlide = (isNext) => {
    const nextSlide = isNext ? getNextSlide() : getPreviousSlide();
    const content = document.getElementById(`content-${nextSlide}`);

    if (content) {
      document
        .getElementById(`content-${currentSlide}`)
        .classList.add("hidden");
      content.classList.remove("hidden");
      currentSlide = nextSlide;
    }
  };

  const autoSlide = () => {
    setInterval(() => {
      changeSlide(true);
    }, 5000);
  };

  autoSlide();
</script>

<style>
  @tailwind components;

  @layer components {
    .carousel-control-btn {
      @apply bg-recandy-white-50 rounded-full w-12 h-12 flex justify-center items-center inset-0 z-30 hover:bg-recandy-blue-600 hover:text-recandy-white-0 transition shadow-md;
    }
  }
</style>
