---
import Button from "../components/Button.astro";
import FormInput from "../components/forms/FormInput.astro";
import FilterButton from "../components/pages/sell-product/FilterButton.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="CodeMart | Sell">
    <div class="bg-recandy-white-100 py-24 px-64">
        <div class="grid grid-cols-6 gap-6">
            <div class="col-span-6 sm:col-span-3">
                <p class="mb-2">Add Title*</p>
                <FormInput type={'text'} placeholder={"Add Title"}/>
            </div>
            <div class="col-span-6 sm:col-span-3">
                <p class="mb-2">Categories</p>
                <FormInput type={'text'} placeholder={"Search Categories..."}/>
                <div class="flex flex-row justify-between mt-4">
                    <FilterButton>C++</FilterButton>
                    <FilterButton>JavaScript</FilterButton>
                    <FilterButton>Python</FilterButton>
                    <FilterButton>Java</FilterButton>
                </div>
            </div>
        </div>
        <div class="my-12">
            <div class="border-2 border-dashed py-32 bah bg-recandy-gray-50 border-black w-1/2">
                <div class="text-center flex flex-col justify-center items-center">
                    <p>Drag and Drop</p>
                    <p>Your File Hire</p>
                </div>
            </div>
            <br>
            <input type="file">
        </div>
        <div>
            <p class="mb-2">Add Description*</p>
            <textarea name="upload" id="" cols="120" rows="10" class="border border-recanndy-gray-50"></textarea>
        </div>
        <div class="mt-6">
            <Button size={"medium"}>Upload</Button>
        </div>
    </div>
</Layout>