---
import Layout from "../layouts/Layout.astro";

---

<Layout title="CodeMart | Login">
    <div class="">
        <form action="" class="bg-slate-600">
            <h1 class="text-center font-bold">Welcome Back</h1>
            <p class="text-center">Enter your credentials to access your account</p>
            <div>
                <input class="box-border hover:box-content py-2 px-2" type="email" placeholder="Email address">
            </div>
            <div>
                <input class="box-border hover:box-content py-2 px-2" type="password" placeholder="Password">
            </div>
            <button class="" type="submit">Login</button>
            <p class="text-center">Don't have account yet?</p> 
            <p class="text-center">Forgot your password?</p>
        </form>
    </div>
</Layout>