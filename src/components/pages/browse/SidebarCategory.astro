---
export interface Props {
  title: string;
  categories: string[];
}

const { title, categories } = Astro.props as Props;
---

<div class='border-t-2 border-r-recandy-gray-50 mt-4 mb-8 pt-4'>
  <h6>{title}</h6>

  <div class='flex flex-col space-y-4 mt-2'>
    {
      categories.map((category) => {
        return (
          <label class='inline-flex items-center mt-3'>
            <input
              type='checkbox'
              class='form-checkbox h-5 w-5 text-recandy-blue-500'
            />
            <span class='ml-2 text-sm text-recandy-black-700'>{category}</span>
          </label>
        );
      })
    }
  </div>
</div>
