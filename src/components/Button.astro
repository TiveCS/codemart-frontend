---
type ButtonType = "primary" | "outline" | "text";

export interface Props {
  type?: ButtonType;
  size?: "small" | "normal" | "medium" | "large";
  textSize?: "sm" | "base" | "md" | "lg";
  btnWidth?: "auto" | "full" | "half" | "third" | "quarter";
  onClick?: string | undefined;
  id?: string;
}

const {
  type = "primary",
  size = "normal",
  textSize = "base",
  btnWidth = "auto",
  onClick = undefined,
  id = undefined,
} = Astro.props as Props;
---

<button
  class={`btn btn-${type} btn-size-${size} text-${textSize} btn-w-${btnWidth}`}
  onclick={onClick}
  id={id}
>
  <slot />
</button>

<style>
  @tailwind components;

  @layer components {
    .btn {
      @apply rounded-md px-8 py-2 font-medium;
    }

    .btn-w-auto {
      @apply !w-auto;
    }

    .btn-w-full {
      @apply !w-full;
    }

    .btn-w-half {
      @apply !w-1/2;
    }

    .btn-w-third {
      @apply !w-1/3;
    }

    .btn-w-quarter {
      @apply !w-1/4;
    }

    .btn-size-small {
      @apply !px-6 !py-2;
    }

    .btn-size-large {
      @apply !py-3;
    }

    .btn-size-medium {
      @apply !py-2.5;
    }

    .btn-primary {
      @apply bg-recandy-blue-600 text-recandy-white-0 hover:bg-recandy-blue-700;
    }

    .btn-outline {
      @apply border border-recandy-blue-600 text-recandy-blue-600 hover:bg-recandy-blue-600 hover:text-recandy-white-0;
    }

    .btn-text {
      @apply text-recandy-blue-600 hover:bg-recandy-blue-600 hover:text-recandy-white-0;
    }
  }
</style>
