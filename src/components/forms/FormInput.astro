---
export interface Props {
  placeholder: string | undefined;
  type?: "text" | "password" | "email";
  id?: string;
}

const { placeholder, type = "text", id = undefined } = Astro.props as Props;
---

<input
  id={id}
  type={type}
  placeholder={placeholder}
  class="border border-recandy-gray-50 py-3 px-4 rounded-md text-sm w-full"
/>
